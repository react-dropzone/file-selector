{
  "name": "file-selector",
  "version": "0.0.0-development",
  "description": "Convert DataTransfer object to a list of File objects",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist/**/*",
    "src/*",
    "!*.spec.*"
  ],
  "keywords": [
    "drag-and-drop",
    "html5",
    "file-api",
    "DataTransfer",
    "File"
  ],
  "homepage": "https://github.com/react-dropzone/file-selector",
  "license": "MIT",
  "author": {
    "name": "Roland Groza",
    "email": "rolandjitsu@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/react-dropzone/file-selector.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "rm -rf dist && tsc -p ./tsconfig.build.json",
    "lint": "tslint --project ./tsconfig.json --format stylish",
    "lint:fix": "npm run lint -- --fix",
    "pretest:cov": "npm run lint",
    "test:cov": "jest --coverage",
    "test": "jest --watch"
  },
  "devDependencies": {
    "@types/jest": "^29.5.13",
    "@types/node": "^22.7.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.2.5",
    "tslint": "^6.1.3",
    "typescript": "^5.6.2"
  },
  "engines": {
    "node": ">=18"
  }
}
